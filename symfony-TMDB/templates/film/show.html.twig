{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 d-flex justify-content-around flex-wrap">
                {# Boucle sur le tableau $films du controller #}
                {% for key, item in films %}
                    <div class="card" style="width: 450px; margin-top: 50px">
                        <div class="card-header"></div>
                        <div class="card-body">
                            <h5 class="card-title">{{ item.getTitre}}</h5>
                            <p class="card-text">{{ item.getSynopsis}}</p>
                            <a href="#" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}